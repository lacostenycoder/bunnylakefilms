<body class="no-js page-stage">

<div class="container fullsite">

    <%= render partial: 'base/menu' %>

    <hr/>

	<div class="content" id="stage">

		<div id="videoFrame" class="show">

			<% if @work.host_id == 2 %>

			<iframe id="player" type="text/html" width="100%" height="100%"
			  src="http://www.youtube.com/embed/<%= @work.video_code %>?enablejsapi=1&origin=http://example.com"
			  frameborder="0"></iframe>

			<% else %>

			<iframe id="video-player" src="//player.vimeo.com/video/<%= @work.video_code %>"
				width="100%" height="100%" frameborder="0" byline="0" color="ce3229"
				title="0" badge="0" autoplay="1"
				webkitallowfullscreen="" mozallowfullscreen="" allowfullscreen="">
			</iframe>

			<% end %>
		</div>

		<div class="show_caption">
			<span><%= @work.title %></span><br>
			<span class="show_cap_description"><%= @work.description %></span>
		</div>

		<br>
		<div class="work_skip_button work_skip_prev">
			<%= link_to '&#60; PREV'.html_safe, work_path(@work.previous) %>
		</div>

		<div class="work_skip_button work_skip_next">
			<%= link_to 'NEXT &#62;'.html_safe, work_path(@work.next) %>
		</div>

		<div style="margin:100px 0"></div>

	</div>

</div>

<%= render partial: 'base/mobile_index' %>

<%= render partial: 'base/footer' %>

</body>
